<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutMeActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/about_tools"
            android:background="@drawable/ms_main_theme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/about_us_back"
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="33dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/ms_white_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:text="关于微星秀"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
    <ImageView
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:id="@+id/about_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/about_tools"
            android:layout_marginTop="45dp" />
    <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/about_account"
            android:layout_marginTop="25dp"
            android:text="官方账号"
            android:background="@drawable/card_circle_shape_fans"
            app:layout_constraintTop_toBottomOf="@id/about_logo"
            app:layout_constraintStart_toStartOf="@id/about_logo"
            app:layout_constraintEnd_toEndOf="@id/about_logo"/>
    <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/about_update"
            android:layout_marginTop="12dp"
            android:text="版本更新"
            android:background="@drawable/card_circle_shape_fans"
            app:layout_constraintTop_toBottomOf="@id/about_account"
            app:layout_constraintStart_toStartOf="@id/about_logo"
            app:layout_constraintEnd_toEndOf="@id/about_logo"/>
    <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/about_judge"
            android:layout_marginTop="12dp"
            android:text="去评分"
            android:background="@drawable/card_circle_shape_fans"
            app:layout_constraintTop_toBottomOf="@id/about_update"
            app:layout_constraintStart_toStartOf="@id/about_logo"
            app:layout_constraintEnd_toEndOf="@id/about_logo"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_protocol"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="18dp"
            android:text="微星秀用户服务协议"
            android:textColor="#479bd1"
            app:layout_constraintTop_toBottomOf="@id/about_judge"
            app:layout_constraintStart_toStartOf="@id/about_judge"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_security"
            android:text="隐私政策"
            android:textColor="#479bd1"
            app:layout_constraintEnd_toEndOf="@id/about_judge"
            app:layout_constraintTop_toTopOf="@id/about_protocol" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_name"
            android:text="天津星美银河传媒科技有限公司"
            android:textColor="#479bd1"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/about_protocol"
            app:layout_constraintStart_toStartOf="@id/about_protocol"
            app:layout_constraintEnd_toEndOf="@id/about_security"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="copyright"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/about_name"
            app:layout_constraintEnd_toEndOf="@id/about_name"
            app:layout_constraintTop_toBottomOf="@id/about_name"/>



</android.support.constraint.ConstraintLayout>