<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FansActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/backgoround"
            android:background="#66ccff"
    />

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="@+id/backgoround"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/myCard"
            android:layout_marginTop="125dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#e3284b"

    >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:id="@+id/fans_user_nickname"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@+id/fans_user_nickname"
                    app:layout_constraintTop_toBottomOf="@+id/fans_user_nickname"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="本月排名："
                    android:id="@+id/fans_user_rank"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/fans_user_rank"
                    app:layout_constraintLeft_toRightOf="@+id/fans_user_rank"
                    android:textSize="24dp"
                    android:textColor="#ffffff"
                    android:text="93"
                    android:id="@+id/fans_user_ranknum"

            />

            <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@drawable/text_circle_shape"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:text="加入圈子"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="@id/fans_user_rank"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="25dp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="45dp"
                    android:text="阅读"
                    android:textSize="12sp"
                    android:textColor="#f7f7f7"
                    android:id="@+id/read"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#f7f7f7"
                    android:layout_marginBottom="45dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/read"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/read_num"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/read"
                    android:layout_marginLeft="90dp"
                    android:layout_marginBottom="45dp"
                    android:text="帖子"
                    android:textSize="12sp"
                    android:textColor="#f7f7f7"
                    android:id="@+id/invitation"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#f7f7f7"
                    android:layout_marginBottom="45dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/invitation"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/invitation_num"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#f7f7f7"
                    android:layout_marginBottom="45dp"
                    app:layout_constraintLeft_toRightOf="@+id/invitation"
                    android:layout_marginLeft="90dp"
                    android:text="粉丝"
                    android:textSize="12sp"
                    android:id="@+id/fans"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#f7f7f7"
                    android:layout_marginBottom="45dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintLeft_toRightOf="@+id/fans"
                    android:id="@+id/fans_num"
            />

            <com.kcrason.dynamicpagerindicatorlibrary.DynamicPagerIndicator
                    android:id="@+id/dynamic_pager_indicator2_rankhistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:indicatorLineEndColor="@color/white"
                    app:indicatorLineScrollMode="dynamic"
                    app:indicatorLineStartColor="@color/white"
                    android:layout_marginEnd="60dp"
                    android:layout_marginStart="60dp"
                    app:pagerIndicatorMode="scrollable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="6dp"
                    app:pagerIndicatorScrollToCenterMode="linkage"
                    app:tabNormalTextColor="@color/white"
                    app:tabSelectedTextColor="@color/white"
                    app:tabSelectedTextSize="20dp"
                    app:tabNormalTextSize="18dp"/>

        </android.support.constraint.ConstraintLayout>



    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/myCard"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="140dp"
            android:id="@+id/fans_user_portrait"
            android:elevation="10dp"

    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="发帖"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
    />

    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myCard"
    />

</android.support.constraint.ConstraintLayout>