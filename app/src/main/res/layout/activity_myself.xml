<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyUserActivity">
    <ImageView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="300dp"
            android:id="@+id/backgoround"
            android:background="#66ccff"
            />

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="@+id/backgoround"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/myCard"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="125dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#FF7F50"

            >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="93"
                    android:textColor="#f7f7f7"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="18dp"
                    android:id="@+id/se_rank"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="本月排名："
                    android:textColor="#f7f7f7"
                    app:layout_constraintRight_toLeftOf="@+id/se_rank"
                    app:layout_constraintBottom_toBottomOf="@+id/se_rank"

                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="42dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:id="@+id/se_nickname"
                    android:textColor="#f7f7f7"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/se_nickname"
                    app:layout_constraintTop_toTopOf="@+id/se_nickname"
                    app:layout_constraintBottom_toBottomOf="@+id/se_nickname"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:id="@+id/se_message"
                    android:textColor="#f7f7f7"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@+id/se_nickname"
                    app:layout_constraintTop_toBottomOf="@+id/se_nickname"
                    android:text="ssssss"
                    android:textSize="12sp"
                    android:textColor="#f7f7f7"
                    android:id="@+id/se_myself"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="60dp"
                    android:text="粉丝"
                    android:textSize="10sp"
                    android:textColor="#f7f7f7"
                    android:id="@+id/people"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#f7f7f7"
                    android:layout_marginBottom="60dp"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/people"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/se_people_num"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#f7f7f7"
                    android:layout_marginBottom="60dp"
                    app:layout_constraintLeft_toRightOf="@+id/people"
                    android:layout_marginLeft="70dp"
                    android:text="人气"
                    android:textSize="10sp"
                    android:id="@+id/pop"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#f7f7f7"
                    android:layout_marginBottom="60dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintLeft_toRightOf="@+id/pop"
                    android:id="@+id/se_pop_num"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#f7f7f7"
                    android:layout_marginBottom="60dp"
                    app:layout_constraintLeft_toRightOf="@+id/pop"
                    android:layout_marginLeft="70dp"
                    android:text="关注"
                    android:textSize="10sp"
                    android:id="@+id/focus"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#f7f7f7"
                    android:layout_marginBottom="60dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/focus"
                    android:id="@+id/se_focus_num"
                    />
            <com.kcrason.dynamicpagerindicatorlibrary.DynamicPagerIndicator
                    android:id="@+id/se_dynamic_pager_indicator2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:indicatorLineEndColor="@color/white"
                    app:indicatorLineScrollMode="dynamic"
                    app:indicatorLineStartColor="@color/white"

                    app:pagerIndicatorMode="scrollable_center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="6dp"
                    app:pagerIndicatorScrollToCenterMode="linkage"
                    app:tabNormalTextColor="@color/white"
                    app:tabSelectedTextColor="@color/white"
                    app:tabSelectedTextSize="20dp"
                    app:tabNormalTextSize="18dp"/>


        </android.support.constraint.ConstraintLayout>



    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/myCard"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="140dp"
            android:id="@+id/se_portrait"
            android:elevation="10dp"
            />

    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myCard"
            android:id="@+id/se_view"
            />

</android.support.constraint.ConstraintLayout>