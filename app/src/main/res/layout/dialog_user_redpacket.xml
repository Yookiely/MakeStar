<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iv_dialog_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:layout_marginEnd="86dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ms_money"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_dialog_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="已存入红包"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_dialog_background"
            app:layout_constraintLeft_toLeftOf="@id/iv_dialog_background"
            app:layout_constraintRight_toRightOf="@id/iv_dialog_background" />

    <TextView
            android:id="@+id/tv_dialog_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="已存入红包"
            android:textColor="#ffffff"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@id/tv_dialog_label"
            app:layout_constraintLeft_toLeftOf="@id/iv_dialog_background"
            app:layout_constraintRight_toRightOf="@id/iv_dialog_background"
            tools:text="￥5.00" />
</android.support.constraint.ConstraintLayout>