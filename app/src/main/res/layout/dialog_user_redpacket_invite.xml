<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iv_redpacketinvite_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ms_invite"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_redpacketinvite_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="红包邀请码"
            android:textColor="#ffffff"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@id/iv_redpacketinvite_main"
            app:layout_constraintTop_toTopOf="@id/iv_redpacketinvite_main" />

    <TextView
            android:id="@+id/tv_redpacketinvite_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textSize="50sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_redpacketinvite_label"
            tools:text="9b2a8169928e" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="一起来领红包叭~"
            android:textColor="#ffffff"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_redpacketinvite_num" />

    <TextView
            android:id="@+id/tv_repacketinvite_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ms_redpacket_comfirm"
            android:gravity="center"
            android:text="复制到粘贴板"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_redpacketinvite_main" />
</android.support.constraint.ConstraintLayout>