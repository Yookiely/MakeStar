<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="200dp"

        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/main_select_image"
        />
        <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="@+id/main_select_image"
                app:layout_constraintRight_toRightOf="@+id/main_select_image"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
        />
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:id="@+id/main_select_user"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="biaoti"
            android:id="@+id/main_select_title"
            app:layout_constraintTop_toBottomOf="@+id/main_select_image"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toRightOf="@+id/main_select_user"
    />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mianshu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_select_title"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintLeft_toRightOf="@+id/main_select_user"
        />

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/main_select_fire"
                app:layout_constraintTop_toBottomOf="@+id/main_select_image"
                app:layout_constraintBottom_toTopOf="@+id/main_select_fire_num"/>
        <TextView
                android:layout_width="40dp"
                android:layout_height="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/main_select_fire_num"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>