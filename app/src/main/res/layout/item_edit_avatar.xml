<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff">

    <TextView
            android:id="@+id/tv_edit_avatar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="头像" />

    <ImageView
            android:id="@+id/iv_edit_avatar_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:adjustViewBounds="true"
            android:maxWidth="10dp"
            android:src="@drawable/ms_gray_right"
            app:layout_constraintBottom_toBottomOf="@id/tv_edit_avatar_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_edit_avatar_title" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_edit_avatar_person"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            app:civ_border_color="#cccccc"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_edit_avatar_title"
            app:layout_constraintRight_toLeftOf="@id/iv_edit_avatar_more"
            app:layout_constraintTop_toTopOf="@id/tv_edit_avatar_title"
            tools:src="@drawable/ms_main_camera" />
</android.support.constraint.ConstraintLayout>
