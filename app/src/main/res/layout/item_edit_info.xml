<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

    <TextView
            android:id="@+id/tv_edit_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="17dp"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="名称" />

    <ImageView
            android:id="@+id/iv_edit_info_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:adjustViewBounds="true"
            android:maxWidth="12dp"
            android:src="@drawable/ms_gray_right"
            app:layout_constraintBottom_toBottomOf="@id/tv_edit_info_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_edit_info_title" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="17dp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_edit_info_title"
            app:layout_constraintRight_toLeftOf="@id/iv_edit_info_more"
            app:layout_constraintTop_toTopOf="@id/tv_edit_info_title">

        <TextView
                android:id="@+id/tv_edit_info_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="16sp"
                tools:text="世界无敌第一桑女孩" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
