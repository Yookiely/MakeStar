<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/fans_post_cons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/fans_info_portrait"
                android:elevation="10dp" />
        <TextView
                android:id="@+id/fans_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="世界第一桑女孩"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginLeft="6dp"
                app:layout_constraintStart_toEndOf="@id/fans_info_portrait"
                app:layout_constraintTop_toTopOf="@id/fans_info_portrait"
                app:layout_constraintBottom_toTopOf="@id/fans_info_time"/>
        <TextView
                android:id="@+id/fans_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-4-9"
                android:textSize="12sp"
                android:textColor="#cccccc"
                app:layout_constraintStart_toStartOf="@id/fans_info_name"
                app:layout_constraintTop_toBottomOf="@id/fans_info_name"/>
        <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:id="@+id/fans_info_complain"
                android:src ="@drawable/ms_fans_complain"
                android:layout_marginEnd="6dp"
                app:layout_constraintTop_toTopOf="@id/fans_text_info_complain"
                app:layout_constraintBottom_toBottomOf="@id/fans_text_info_complain"
                app:layout_constraintEnd_toStartOf="@id/fans_text_info_complain"/>
        <TextView
                android:id="@+id/fans_text_info_complain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投诉"
                android:textSize="14sp"
                android:textColor="#cccccc"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/fans_info_portrait"
                app:layout_constraintBottom_toBottomOf="@id/fans_info_portrait"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="SmallSp" />
        <ImageView
                android:id="@+id/fans_info_photo"
                android:layout_width="360dp"
                tools:src="@drawable/ms_red_heart"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toBottomOf="@id/fans_info_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:id="@+id/fans_dou_photo"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                tools:src="@drawable/ms_red_heart"
                app:layout_constraintTop_toBottomOf="@id/fans_info_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fans_dou_photo2"/>
        <ImageView
                android:id="@+id/fans_dou_photo2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                tools:src="@drawable/ms_red_heart"
                app:layout_constraintTop_toTopOf="@id/fans_dou_photo"
                app:layout_constraintStart_toEndOf="@id/fans_dou_photo"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:id="@+id/fans_tri_photo"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                app:layout_constraintTop_toBottomOf="@id/fans_info_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fans_tri_photo2"/>
        <ImageView
                android:id="@+id/fans_tri_photo2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/fans_tri_photo"
                app:layout_constraintStart_toEndOf="@id/fans_tri_photo"
                app:layout_constraintEnd_toStartOf="@id/fans_tri_photo3"/>
        <ImageView
                android:id="@+id/fans_tri_photo3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="@id/fans_tri_photo"
                app:layout_constraintStart_toEndOf="@id/fans_tri_photo2"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:id="@+id/fans_tri2_photo"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/fans_tri_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fans_tri2_photo2"/>
        <ImageView
                android:id="@+id/fans_tri2_photo2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/fans_tri2_photo"
                app:layout_constraintStart_toEndOf="@id/fans_tri2_photo"
                app:layout_constraintEnd_toStartOf="@id/fans_tri2_photo3"/>
        <ImageView
                android:id="@+id/fans_tri2_photo3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="@id/fans_tri2_photo"
                app:layout_constraintStart_toEndOf="@id/fans_tri2_photo2"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:id="@+id/fans_tri3_photo"
                android:layout_width="120dp"
                tools:src="@drawable/ms_red_heart"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/fans_tri2_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fans_tri3_photo2"/>
        <ImageView
                android:id="@+id/fans_tri3_photo2"
                android:layout_width="120dp"
                tools:src="@drawable/ms_red_heart"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/fans_tri3_photo"
                app:layout_constraintStart_toEndOf="@id/fans_tri3_photo"
                app:layout_constraintEnd_toStartOf="@id/fans_tri3_photo3"/>
        <ImageView
                android:id="@+id/fans_tri3_photo3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                tools:src="@drawable/ms_red_heart"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="@id/fans_tri3_photo"
                app:layout_constraintStart_toEndOf="@id/fans_tri3_photo2"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fans_info_text"
                android:ems="17"
                android:text="哈哈哈哈哈哈哈哈哈，哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/fans_tri3_photo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fans_tri3_photo"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>