<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp" xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <android.support.v4.widget.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/message_portrait"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/message_portrait"
            app:layout_constraintLeft_toRightOf="@+id/message_portrait"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:id="@+id/user_nickname"
            android:text="11111"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/user_nickname"
            app:layout_constraintLeft_toLeftOf="@+id/user_nickname"
            android:layout_marginTop="6dp"
            android:textSize="10sp"
            android:textColor="#999999"
            android:text="11111111"
            android:id="@+id/message_detail"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/user_nickname"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="2dp"
            android:id="@+id/message_time"
    />

    <TextView
            android:layout_width="24dp"
            android:layout_height="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/message_time"
            android:layout_marginTop="8dp"
            android:background="@drawable/tips_circle_shape"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:text="99+"
            android:gravity="center"
            android:id="@+id/message_tips_num"

    />

</android.support.constraint.ConstraintLayout>