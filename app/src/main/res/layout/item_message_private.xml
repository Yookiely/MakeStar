<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#d8d8d8">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="4dp"
            >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/message_avater"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/message_avater"
                    android:layout_marginTop="2dp"
                    app:layout_constraintLeft_toRightOf="@+id/message_avater"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:id="@+id/message_nickname"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/message_nickname"
                    app:layout_constraintLeft_toRightOf="@+id/message_avater"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:id="@+id/message_time"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/message_avater"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/message_message"
                    />
            <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle_orange_text"
                    android:textColor="#ffffff"
                    android:text="回复"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/message_button"

                    />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="15dp"
            android:visibility="gone"
            app:cardBackgroundColor = "#ee0000"
            android:id="@+id/meassage_private_flag"

            />

</android.support.constraint.ConstraintLayout>