<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="32dp"
            android:id="@+id/user_portrait"
            android:elevation="10dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/user_portrait"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:text="123456"
            android:id="@+id/user_nickname"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/user_nickname"
            app:layout_constraintLeft_toRightOf="@+id/user_portrait"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:text="123456"
            android:id="@+id/user_time"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/user_nickname"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:text="123456"
            android:textColor="#bbbbbb"
            android:id="@+id/user_action"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_time"
            app:layout_constraintLeft_toRightOf="@+id/user_portrait"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:text="123456"
            android:id="@+id/user_comment"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_comment"
            app:layout_constraintLeft_toRightOf="@+id/user_portrait"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:text="123456"
            android:textColor="#bbbbbb"
            android:id="@+id/user_quote"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            />

    <TextView
            android:layout_width="1dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/user_comment"
            app:layout_constraintLeft_toRightOf="@+id/user_portrait"
            android:background="#aaaaaa"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#999999"
            />

    <android.support.v7.widget.CardView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginRight="24dp"
            app:cardCornerRadius="15dp"
            android:visibility="gone"
            app:cardBackgroundColor = "#ee0000"
            android:id="@+id/meassage_up_flag"

            />

</android.support.constraint.ConstraintLayout>