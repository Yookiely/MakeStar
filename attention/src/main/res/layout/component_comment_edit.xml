<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

    <EditText
            android:id="@+id/et_comment_input"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:hint="发布你的惊世言论"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ms_search_background"
            android:maxLines="1"
            android:gravity="center"
            android:textSize="17sp"
            android:imeOptions="actionSend"
            app:layout_constraintBottom_toBottomOf="parent"
            android:singleLine="true"
            android:textColorHint="#cccccc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/et_comment_confirm"
            app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
            android:id="@+id/et_comment_confirm"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="#f54b42"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/et_comment_input"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="@id/et_comment_input">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="发送"
                android:textColor="#ffffff"
                android:textSize="17sp" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>