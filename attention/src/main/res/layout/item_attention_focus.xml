<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_attention_pic_focus"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="1dp"
            android:layout_centerInParent="true"
            app:civ_border_color="#cccccc"
            tools:src="@drawable/ms_main_camera"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/tv_attention_rank_focus"
            app:layout_constraintTop_toBottomOf="@id/cv_attention_pic_focus"
            app:layout_constraintLeft_toLeftOf="@id/cv_attention_pic_focus"
            app:layout_constraintRight_toRightOf="@id/cv_attention_pic_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="NO.123"/>

    <LinearLayout
            android:id="@+id/ll_attention_focus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/cv_attention_pic_focus"
            app:layout_constraintBottom_toBottomOf="@id/cv_attention_pic_focus"
            app:layout_constraintLeft_toRightOf="@id/cv_attention_pic_focus"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="20dp">

        <TextView
                android:id="@+id/tv_attention_name_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                tools:text="世界第一丧女孩"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_attention_time_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    tools:text="[19-01-13]"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_attention_message_focus"
                    android:layout_marginStart="7dp"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:singleLine="true"
                    tools:text="这里是在日本的桑酱！我们的口是一个大"/>
        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_attention_rank_focus"
            android:layout_marginTop="8dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/ll_attention_focus"
            app:layout_constraintBottom_toBottomOf="@id/tv_attention_rank_focus">

        <TextView
                android:id="@+id/tv_attention_focus_label1"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:background="@drawable/ms_label_first"
                android:paddingStart="2dp"
                android:textColor="#e55224"
                android:textSize="10sp"
                android:gravity="center"
                android:paddingEnd="2dp"
                tools:text="#颜值"/>

        <TextView
                android:id="@+id/tv_attention_focus_label2"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:background="@drawable/ms_label_second"
                android:paddingStart="2dp"
                android:textColor="#e11fed"
                android:textSize="10sp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:paddingEnd="2dp"
                tools:text="搞笑博主"/>

        <TextView
                android:id="@+id/tv_attention_focus_label3"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:background="@drawable/ms_label_first"
                android:paddingStart="2dp"
                android:textColor="#e55224"
                android:textSize="10sp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:paddingEnd="2dp"
                tools:text="#颜值"/>

        <TextView
                android:id="@+id/tv_attention_focus_label4"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:background="@drawable/ms_label_second"
                android:paddingStart="2dp"
                android:textColor="#e11fed"
                android:textSize="10sp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:paddingEnd="2dp"
                tools:text="搞笑博主"/>

        <TextView
                android:id="@+id/tv_attention_focus_label5"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:background="@drawable/ms_label_first"
                android:paddingStart="2dp"
                android:textColor="#e55224"
                android:textSize="10sp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:paddingEnd="2dp"
                tools:text="#颜值"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>