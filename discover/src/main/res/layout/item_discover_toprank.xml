<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="200dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/rank_img_second"
            app:civ_border_color="#e7eaeb"
            app:civ_border_width="2dp"
            tools:src="@drawable/ms_no_pic"
    />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65dp"
            android:adjustViewBounds="true"
            android:maxHeight="32dp"
            android:src="@drawable/ms_silvery"
            app:layout_constraintBottom_toBottomOf="@id/rank_img_second"
            app:layout_constraintLeft_toLeftOf="@id/rank_img_second"
            app:layout_constraintRight_toRightOf="@id/rank_img_second" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/rank_img_first"
            app:civ_border_color="#f2e25e"
            app:civ_border_width="2dp"
            tools:src="@drawable/ms_no_pic"
    />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65dp"
            android:adjustViewBounds="true"
            android:maxHeight="32dp"
            android:src="@drawable/ms_gold"
            app:layout_constraintBottom_toBottomOf="@id/rank_img_first"
            app:layout_constraintLeft_toLeftOf="@id/rank_img_first"
            app:layout_constraintRight_toRightOf="@id/rank_img_first" />
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:id="@+id/rank_img_third"
            android:layout_centerInParent="true"
            app:civ_border_color="#daae9c"
            app:civ_border_width="2dp"
            tools:src="@drawable/ms_no_pic"
    />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65dp"
            android:adjustViewBounds="true"
            android:maxHeight="32dp"
            android:src="@drawable/ms_copper"
            app:layout_constraintBottom_toBottomOf="@id/rank_img_third"
            app:layout_constraintLeft_toLeftOf="@id/rank_img_third"
            app:layout_constraintRight_toRightOf="@id/rank_img_third" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/rank_text_second"
            app:layout_constraintTop_toBottomOf="@+id/rank_img_second"
            app:layout_constraintRight_toRightOf="@+id/rank_img_second"
            app:layout_constraintLeft_toLeftOf="@+id/rank_img_second"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="#333333"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/rank_text_first"
            app:layout_constraintTop_toBottomOf="@+id/rank_img_first"
            app:layout_constraintRight_toRightOf="@+id/rank_img_first"
            app:layout_constraintLeft_toLeftOf="@+id/rank_img_first"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="#333333"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/rank_text_third"
            app:layout_constraintTop_toBottomOf="@+id/rank_img_third"
            app:layout_constraintRight_toRightOf="@+id/rank_img_third"
            app:layout_constraintLeft_toLeftOf="@+id/rank_img_third"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="#333333"
    />

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            app:layout_constraintTop_toBottomOf="@+id/rank_text_second"
            app:layout_constraintRight_toRightOf="@+id/rank_text_second"
            app:layout_constraintLeft_toLeftOf="@+id/rank_text_second"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/rank_heat_second"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#ed1641"
        />

        <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintRight_toLeftOf="@id/rank_heat_second"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ms_living"

        />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            app:layout_constraintTop_toBottomOf="@+id/rank_text_first"
            app:layout_constraintRight_toRightOf="@+id/rank_text_first"
            app:layout_constraintLeft_toLeftOf="@+id/rank_text_first"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/rank_heat_first"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#ed1641"
        />

        <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintRight_toLeftOf="@id/rank_heat_first"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ms_living"
        />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            app:layout_constraintTop_toBottomOf="@+id/rank_text_third"
            app:layout_constraintRight_toRightOf="@+id/rank_text_third"
            app:layout_constraintLeft_toLeftOf="@+id/rank_text_third"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/rank_heat_third"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#ed1641"
        />

        <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintRight_toLeftOf="@id/rank_heat_third"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ms_living"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>