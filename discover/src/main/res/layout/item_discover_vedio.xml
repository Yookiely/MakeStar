<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp">
    <ImageView
            android:layout_width="153dp"
            android:layout_height="92dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:id="@+id/rank_img_cover"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/rank_text_num"
            android:textColor="#ed1641"
            android:textSize="16sp"
            android:text="No.1"
    />

    <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/rank_img_cover"
            app:layout_constraintRight_toLeftOf="@+id/rank_text_num"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:textColor="#333333"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="0.9"
            android:text="一本正经的胡说八道一本正经的胡说八道"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:id="@+id/rank_text_title"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/rank_text_title"
            app:layout_constraintTop_toBottomOf="@+id/rank_text_title"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:id="@+id/rank_text_nickname"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/rank_text_nickname"
            app:layout_constraintTop_toBottomOf="@+id/rank_text_nickname"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:id="@+id/rank_text_count"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/rank_text_count"
            app:layout_constraintTop_toBottomOf="@+id/rank_text_nickname"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="#aaaaaa"
            android:id="@+id/rank_text_time"
    />
    <android.support.constraint.ConstraintLayout
            android:layout_width="42dp"
            app:layout_constraintLeft_toLeftOf="@+id/rank_text_count"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_height="16dp"
            android:background="@drawable/tag_circle_shape">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="#小剧场"
                android:gravity="center"
                android:textSize="8sp"
                android:textColor="#ffffff"
                android:id="@+id/rank_tag_1"

        />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="42dp"
            app:layout_constraintLeft_toLeftOf="@+id/rank_text_count"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_height="16dp"
            android:layout_marginLeft="46dp"
            android:background="@drawable/tag_circle_shape">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="#颜值"
                android:gravity="center"
                android:textSize="8sp"
                android:textColor="#ffffff"
                android:id="@+id/rank_tag_2"

        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="42dp"
            app:layout_constraintLeft_toLeftOf="@+id/rank_text_count"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_height="16dp"
            android:layout_marginLeft="92dp"
            android:background="@drawable/tag_circle_shape">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="●  ●  ●"
                android:gravity="center"
                android:textSize="2sp"
                android:textColor="#ffffff"
                android:id="@+id/rank_tag_3"

        />
    </android.support.constraint.ConstraintLayout>

    <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/rank_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="14dp"
            android:textColor="#ed1641"
            android:id="@+id/rank_button"

    />


</android.support.constraint.ConstraintLayout>