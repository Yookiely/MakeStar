<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="320dp" xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="14dp"
            android:id="@+id/user_donate_img"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="@+id/user_donate_img"
            app:layout_constraintBottom_toBottomOf="@+id/user_donate_img"
            app:layout_constraintLeft_toRightOf="@+id/user_donate_img"
            android:layout_marginLeft="8dp"
            android:id="@+id/user_donate_nickname"
    />
    
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            app:layout_constraintTop_toBottomOf="@+id/user_donate_img"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/title"
            android:layout_marginBottom="20dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="14dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp"
            android:text="进度:"
            android:id="@+id/progress"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/progress"
            app:layout_constraintLeft_toLeftOf="@+id/progress"
            android:layout_marginBottom="8dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp"
            android:text="分类:"
            android:id="@+id/classification"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/progress"
            app:layout_constraintBottom_toTopOf="@+id/classification"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="标题:"
            android:id="@+id/title"
    />
    
    <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/follow_circle_shape"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="+关注"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/title"
            app:layout_constraintBottom_toTopOf="@+id/classification"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="生日应援"
            android:id="@+id/act_donate_title"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/progress"
            app:layout_constraintLeft_toRightOf="@+id/classification"
            android:layout_marginBottom="8dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="粉丝众筹"
            android:id="@+id/act_donate_classification"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ed1641"
            android:text="10%"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/act_donate_progressnum"
    />
    
    <ProgressBar
            android:layout_width="0dp"
            android:layout_height="10dp"
            style="?android:attr/progressBarStyleHorizontal"
            app:layout_constraintLeft_toRightOf="@+id/progress"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16sp"
            android:max="100"
            android:progress="50"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/layer_list_progress_drawable"
            app:layout_constraintRight_toLeftOf="@+id/act_donate_progressnum"
            android:id="@+id/act_donate_progressbar"
    />


</android.support.constraint.ConstraintLayout>