<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="320dp" xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="14dp"
            android:id="@+id/user_donate_img"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="@+id/user_donate_img"
            app:layout_constraintBottom_toBottomOf="@+id/user_donate_img"
            app:layout_constraintLeft_toRightOf="@+id/user_donate_img"
            android:layout_marginLeft="8dp"
            android:id="@+id/user_donate_nickname"
    />


</android.support.constraint.ConstraintLayout>