<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.HomePageActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/tb_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_shape"
            app:layout_constraintTop_toTopOf="parent">

        <com.kcrason.dynamicpagerindicatorlibrary.DynamicPagerIndicator
                android:id="@+id/dynamic_pager_indicator2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:indicatorLineEndColor="@color/colorPrimary"
                app:indicatorLineScrollMode="dynamic"
                app:indicatorLineStartColor="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="60dp"
                app:pagerIndicatorMode="scrollable"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                app:pagerIndicatorScrollToCenterMode="linkage"/>

        <ImageView
                android:background="@drawable/ms_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="end"/>
    </android.support.v7.widget.Toolbar>


    <android.support.v4.view.ViewPager
            android:id="@+id/view_pager2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bottom"
            app:layout_constraintTop_toBottomOf="@id/tb_main"/>


    <include
            android:id="@+id/bottom"
            layout="@layout/main_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/show"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@drawable/ms_main_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>