<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="用户" />

    <TextView
            android:id="@+id/tv_search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="删除"
            android:textColor="#999999"
            android:textSize="12sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_search_title" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:adjustViewBounds="true"
            android:maxHeight="16dp"
            android:src="@drawable/ms_trash"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_title"
            app:layout_constraintRight_toLeftOf="@id/tv_search_clear"
            app:layout_constraintTop_toTopOf="@id/tv_search_title" />

    <ImageView
            android:id="@+id/iv_search_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="8dp"
            android:src="@drawable/ms_gray_more"
            app:layout_constraintBottom_toBottomOf="@+id/tv_search_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_search_title" />

    <TextView
            android:id="@+id/tv_search_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="查看更多"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_search_more"
            app:layout_constraintRight_toLeftOf="@id/iv_search_more"
            app:layout_constraintTop_toTopOf="@id/iv_search_more" />
</android.support.constraint.ConstraintLayout>