<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="120dp">

    <ImageView
            android:id="@+id/iv_search_cover"
            android:layout_width="153dp"
            android:layout_height="92dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_search_videotitle"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="14dp"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="0.9"
            android:text="一本正经的胡说八道一本正经的胡说八道"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_search_cover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_search_videoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#aaaaaa"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_search_videotitle"
            app:layout_constraintTop_toBottomOf="@+id/tv_search_videotitle"
            tools:text="哈哈哈哈哈" />

    <TextView
            android:id="@+id/tv_search_videocount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#aaaaaa"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_search_cover"
            app:layout_constraintLeft_toLeftOf="@+id/tv_search_videoname"
            tools:text="1.24亿次助力" />

    <TextView
            android:id="@+id/tv_search_videotime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textColor="#aaaaaa"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_videocount"
            app:layout_constraintLeft_toRightOf="@+id/tv_search_videocount"
            tools:text="2019/04/30" />


</android.support.constraint.ConstraintLayout>